@model QLThuCung.ViewModels.RegisterVM

<div class="container-fluid d-flex justify-content-center align-items-center">
    <form asp-controller="Account" asp-action="Register" class="card overflow-hidden my_margin10 shadow w-50">
        <div class="my_cardheader text-center px-5 py-3">
            <strong>ĐĂNG KÝ</strong>
        </div>
        <div class="my_cardbody px-5 py-3 ">
            <div>
                <label asp-for="FullName">Họ và Tên</label>
                <input asp-for="FullName" type="text" placeholder="Nhập họ và tên" class="form-control"></input>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PhoneNumber" class="mt-3">Số điện thoại</label>
                <input asp-for="PhoneNumber" type="text" placeholder="Nhập số điện thoại" class="form-control"></input>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Email" class="mt-3">Email</label>
                <input asp-for="Email" type="text" placeholder="Nhập email" class="form-control"></input>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password" class="mt-3">Mật khẩu</label>
                <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" class="form-control"></input>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword" class="mt-3">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" placeholder="Nhập lại mật khẩu" class="form-control"></input>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="my_cardfooter px-5 pt-0 pb-3 text-center">
            <button class="btn btn-primary w-100 my-3" type="submit">Xác nhận</button>
            Đã có tài khoản? <a href="/dang-nhap">Đăng nhập ngay</a>
        </div>
    </form>
</div>