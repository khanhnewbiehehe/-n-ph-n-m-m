@model QLThuCung.ViewModels.LoginVM

<div class="container-fluid d-flex justify-content-center align-items-center">
    <form asp-controller="Account" asp-action="Login" class="card overflow-hidden my_margin10 shadow w-50">
        <div class="my_cardheader text-center px-5 py-3">
            <strong>ĐĂNG NHẬP</strong>
        </div>
        <div class="my_cardbody px-5 py-3 ">
            <label asp-for="PhoneNumber">Số điện thoại</label>
            <input asp-for="PhoneNumber" type="text" placeholder="Nhập số điện thoại" class="form-control"></input>
            <span asp-validation-for="PhoneNumber"></span>
            <label asp-for="Password" class="mt-3">Mật khẩu</label>
            <input asp-for="Password" type="password" placeholder="Nhập mật khẩu" class="form-control"></input>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="my_cardfooter px-5 pt-0 pb-3 text-center">
                <button class="btn btn-primary w-100 my-3" type="submit">ĐĂNG NHẬP</button>
                Chưa có tài khoản? <a href="/dang-ky">Đăng ký ngay</a>
        </div>
    </form>
</div>