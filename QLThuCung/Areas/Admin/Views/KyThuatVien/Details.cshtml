@model QLThuCung.Models.NguoiDung

<div class="container p-5 w-100">
    <div class="card my-card m-5 mx-auto">
        <div class="card-header">
            <p class="card-title text-center m-0 p-0"><strong>THÔNG TIN KỸ THUẬT VIÊN</strong></p>
        </div>
        <div class="card-body p-5">
            <div class="d-flex">
                <div class="mx-3">
                    <div style="width: 200px; aspect-ratio:1/1; overflow: hidden; border-radius: 50%;">
                        @if (string.IsNullOrWhiteSpace(Model.AnhDaiDien))
                        {
                            <img class="w-100 h-100" src="/assets/images/default_avatar.png"></img>
                        }
                        else
                        {
                            <img class="w-100 h-100" src="@Model.AnhDaiDien"></img>
                        }
                    </div>
                </div>
                <div class="mx-3 d-flex justify-content-center align-items-center">
                    <div>
                        <p><strong>Họ và tên: </strong>@Model.HoTen</p>
                        <p><strong>Số điện thoại: </strong>@Model.PhoneNumber</p>
                        <p><strong>Email: </strong>@Model.Email</p>
                        <p><strong>Địa chỉ: </strong>@Model.DiaChi</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a href="/admin/kythuatvien/chinhsua/@Model.Id" class="btn btn-primary">Cập nhật</a>
            <a href="/admin/kythuatvien" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>