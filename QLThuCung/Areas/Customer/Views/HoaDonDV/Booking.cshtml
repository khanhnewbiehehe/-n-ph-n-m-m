@model QLThuCung.Models.HoaDonDichVu

<div class="container">
    <div class="mt-5 pt-3">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/khach-hang">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/khachhang/dichvu">Dịch vụ</a></li>
                <li class="breadcrumb-item active" aria-current="page">Đặt lịch chăm sóc</li>
            </ol>
        </nav>
    </div>
    <div class="d-flex justify-content-center align-items-center">
        <div class="card shadow m-5 booking-card">
            <form asp-action="Booking" asp-area="Customer" asp-controller="HoaDonDV">
                <div class="card-header">
                    <p class="title m-0">ĐẶT LỊCH CHĂM SÓC</p>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="NguoiTao" value="@ViewBag.UserId" id="UserId"></input>
                    <label asp-for="IdThuCung" class="mb-2"><strong>Thú cưng</strong></label>
                    <div class="d-flex justify-content-between align-items-center">
                        <select asp-for="IdThuCung" id="ComboBoxThuCung" class="form-control me-2">
                        </select>
                        <button class="btn btn-success ms-2">Khác</button>
                    </div>
                    <div class="mt-3">
                        <strong>Dịch vụ</strong>
                        <div id="ListCheckBoxDichVu" class="mt-2">
                        </div>
                        <p class="mt-3" id="EstimateTime"></p>
                    </div>
                    <div>
                        <strong>Ngày hẹn</strong>
                        <div class="d-flex mt-2">
                            <input asp-for="NgayChamSoc" id="NgayChamSoc" type="date" class="form-control w-50 me-2"></input>
                            <select asp-for="ThoiGianChamSoc" id="ThoiGianChamSoc" class="form-control w-50 ms-2">
                                <option value="">Chọn giờ đến</option>
                                <option value="420">7:00</option>
                                <option value="450">7:30</option>
                                <option value="480">8:00</option>
                                <option value="510">8:30</option>
                                <option value="540">9:00</option>
                                <option value="570">9:30</option>
                                <option value="600">10:00</option>
                                <option value="780">13:00</option>
                                <option value="810">13:30</option>
                                <option value="840">14:00</option>
                                <option value="870">14:30</option>
                                <option value="900">15:00</option>
                                <option value="930">15:30</option>
                                <option value="960">16:00</option>
                            </select>
                        </div>
                    </div>
                    <label asp-for="PhuongThucThanhToan" class="mb-2 mt-3"><strong>Phương thức thanh toán</strong></label>
                    <select asp-for="PhuongThucThanhToan" class="form-control">
                        <option value="1">VNPAY</option>
                        <option value="0">Trả sau</option>
                    </select>
                    <div class="mt-3">
                        <strong>Tổng tiền: </strong>
                        <p id="TotalPrice"></p>
                    </div>
                    <div id="listDichVuInput">
                        
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary w-100">Đặt lịch</button>
                </div>
            </form>
        </div>
    </div>
   
</div>

@section Scripts{
    <script src="~/LoadData/LoadCBThuCung.js"></script>
    <script src="~/LoadData/LoadThoiGianBan.js"></script>
    <script src="~/LoadData/LoadCBDichVu.js"></script>
    
}